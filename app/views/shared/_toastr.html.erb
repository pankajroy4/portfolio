<% unless flash.empty? %>
  <script type="text/javascript">
    $(document).ready(function() {
      <% flash.each do |f| %>
        <% type = get_flash_type(f[0].to_s) %>
        $.toast({
          title: "<%= type&.titleize %>",
          message: "<%= f[1] %>",
          type: "<%= type %>",
          duration: 5000,
        });
      <% end %>
    });
  </script>
<% end %>
