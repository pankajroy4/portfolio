<div class="background">
  <div class="shape"></div>
  <div class="shape"></div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "glass-form" }, data: {controller: "focus-input"}) do |f| %>
  <%= link_to :back, class: "back-arrow" do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>

  <h3>Edit Profile</h3>
  <%= render "admin/users/shared/error_messages", resource: resource %>

  <%= f.label :email, "Email", class: "label" %>
  <%= f.email_field :email, placeholder: "Email", class: "input-field", autofocus: true, autocomplete: "email" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="info">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.label :password, "New Password", class: "label" %>
  <%= f.password_field :password, placeholder: "New Password (Leave blank to keep current)", class: "input-field", autocomplete: "new-password" %>
  <% if @minimum_password_length %>
    <em class="hint"><%= @minimum_password_length %> characters minimum</em>
  <% end %>

  <%= f.label :password_confirmation, "Confirm New Password", class: "label" %>
  <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "input-field", autocomplete: "new-password" %>

  <%= f.label :current_password, "Current Password", class: "label" %>
  <%= f.password_field :current_password, placeholder: "Current Password (Required to save changes)", class: "input-field", autocomplete: "current-password" %>

  <%= f.submit "Update", class: "submit-button" %>


  <%= link_to "Delete my account", 
            registration_path(resource_name), 
            class: "delete-account-btn", 
            data: { confirm: "Are you sure?", method: :delete } %>

  <%#= link_to "Delete my account", registration_path(resource_name), class: "delete-account-btn", data: { method: :delete, confirm: "Are you sure? This action can't be undone!" } %>
<% end %>


